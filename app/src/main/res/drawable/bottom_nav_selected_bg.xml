<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Hình xám phía dưới -->
    <item>
        <shape android:shape="oval">
            <solid android:color="#B8ACAC"/> <!-- màu xám -->
            <size
                android:width="100dp"
                android:height="40dp"/> <!-- chiều rộng của hình xám -->
        </shape>
    </item>

    <!-- Hình tròn trắng -->
    <item android:top="10dp" android:bottom="10dp"> <!-- Điều chỉnh vị trí -->
        <shape android:shape="oval">
            <solid android:color="#FFFFFF"/> <!-- màu trắng -->
            <size
                android:width="60dp"
                android:height="60dp"/> <!-- kích thước hình tròn -->
        </shape>
    </item>

</layer-list>
