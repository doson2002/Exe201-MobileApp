<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".MainActivity">

    <!-- Image for the dish -->
    <ImageView
        android:id="@+id/imageViewDish"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        android:src="@color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Group Order Button -->
    <Button
        android:id="@+id/buttonGroupOrder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Group Order"
        android:backgroundTint="#FF6600"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="16dp" />

    <!-- NestedScrollView bao quanh LinearLayout -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/nestedScrollViewContent"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/imageViewDish"
        android:translationZ="4dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:id="@+id/parentLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- CardView được đặt bên trong LinearLayout -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:padding="16dp"
                android:background="@android:color/white"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp">

                <!-- ConstraintLayout bên trong CardView -->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:background="@color/white"
                    android:layout_height="wrap_content">

                    <!-- Restaurant Name -->
                    <TextView
                        android:id="@+id/textViewRestaurantName"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Cơm Tấm Cô Cám Sài Gòn"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:padding="16dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"/>

                    <!-- Rating and Reviews -->
                    <LinearLayout
                        android:id="@+id/linearLayoutRating"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="8dp"
                        app:layout_constraintTop_toBottomOf="@id/textViewRestaurantName"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent">

                        <TextView
                            android:id="@+id/textViewRating"
                            android:layout_width="104dp"
                            android:layout_height="62dp"
                            android:drawableLeft="@drawable/ic_star_rate_foreground"
                            android:drawablePadding="4dp"
                            android:text="4.6"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/textViewReviews"
                            android:layout_width="wrap_content"
                            android:textColor="@color/black"
                            android:layout_height="wrap_content"
                            android:text="(41 reviews)"
                            android:paddingStart="8dp"/>
                    </LinearLayout>

                    <!-- Delivery Information -->
                    <TextView
                        android:id="@+id/textViewDeliveryInfo"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="4.9 km (From 30 mins)"
                        android:padding="8dp"
                        android:textColor="@color/black"
                        app:layout_constraintTop_toBottomOf="@id/linearLayoutRating"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"/>

                    <!-- Other Information like discount -->
                    <TextView
                        android:id="@+id/textViewDiscountInfo"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="5.000đ off delivery fee with 75.000đ order"
                        android:padding="8dp"
                        android:textColor="@color/black"
                        app:layout_constraintTop_toBottomOf="@id/textViewDeliveryInfo"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"/>

                    <!-- Today's Offer -->
                    <TextView
                        android:id="@+id/textViewTodaysOffer"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Today's Offer"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:padding="16dp"
                        app:layout_constraintTop_toBottomOf="@id/textViewDiscountInfo"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"/>

                    <!-- Food Type -->
                    <TextView
                        android:id="@+id/textViewFoodType"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="FoodType"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:padding="16dp"
                        android:textColor="@color/black"
                        app:layout_constraintTop_toBottomOf="@id/textViewTodaysOffer"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"/>

                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                />


        </LinearLayout>



    </androidx.core.widget.NestedScrollView>

    <!-- Outer LinearLayout với nền màu trắng -->
    <LinearLayout
        android:id="@+id/outerBasketLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@android:color/white"
        android:padding="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:elevation="10dp">

        <!-- Inner LinearLayout với nền màu xanh -->
        <LinearLayout
            android:id="@+id/addToCart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:visibility="visible"
            android:background="@color/tropical_blue"
            android:padding="10dp"
            android:elevation="10dp">

            <!-- TextView để hiển thị số lượng item trong giỏ -->
            <TextView
                android:id="@+id/basketItemCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Basket • 1 Item"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_gravity="center_vertical" />

            <!-- TextView để hiển thị tổng tiền của giỏ hàng -->
            <TextView
                android:id="@+id/basketTotalPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="38.000đ"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_gravity="center_vertical"
                />
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
