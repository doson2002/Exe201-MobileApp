<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/light_black">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end">

        <ImageView
            android:id="@+id/close_button"
            android:layout_width="40dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_close_foreground"
            android:contentDescription="Close"
            />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Chỉnh sửa thời gian mở/đóng cửa"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:gravity="center"
        android:padding="8dp"/>

    <!-- Nội dung của Dialog -->
    <TextView
        android:id="@+id/open_time_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:padding="8dp"
        android:layout_gravity="center" /> <!-- Căn giữa -->

    <Button
        android:id="@+id/open_time_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="90dp"
        android:background="@color/yellow"
        android:textColor="@color/black"
        android:text="Chọn giờ mở cửa"
        android:layout_marginTop="16dp"
        android:layout_gravity="center" /> <!-- Căn giữa -->

    <TextView
        android:id="@+id/close_time_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:padding="8dp"
        android:textColor="@color/black"
        android:layout_gravity="center" /> <!-- Căn giữa -->

    <Button
        android:id="@+id/close_time_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Chọn giờ đóng cửa"
        android:background="@color/yellow"
        android:textColor="@color/black"
        android:layout_marginHorizontal="90dp"
        android:layout_marginTop="16dp"
        android:layout_gravity="center" /> <!-- Căn giữa -->

    <Button
        android:id="@+id/save_button_time_picker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lưu"
        android:background="@drawable/button_background"
        android:layout_marginTop="16dp"
        android:layout_gravity="center" /> <!-- Căn giữa -->
</LinearLayout>
