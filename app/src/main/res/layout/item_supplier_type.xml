<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/white"
    android:padding="8dp">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:background="@color/white"
       >

        <!-- Overlay background with green circle and checkmark (this will be on top) -->
        <ImageView
            android:id="@+id/overlayBackground"
            android:layout_width="83dp"
            android:layout_height="83dp"
            android:elevation="10dp"
            android:background="@drawable/circle_with_check"
            android:visibility="gone"/> <!-- Initially hidden -->

        <!-- Image view to display supplier type image -->
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imageViewSupplierType"
            android:layout_width="80dp"
            android:layout_height="80dp"
            />

    </FrameLayout>

    <TextView
        android:id="@+id/textViewSupplierTypeName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:gravity="center"
        android:text="Supplier Type"
        android:textColor="@android:color/black"
        android:textSize="14sp" />

</LinearLayout>
