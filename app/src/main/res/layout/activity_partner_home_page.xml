<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_layout"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".PartnerHomePageActivity">

    <!-- Title Bar -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <!-- Toolbar (đặt dưới để nó nằm dưới CardView) -->

        <!-- CardView chứa EditText -->
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@color/light_grey"
            android:elevation="10dp"
            app:title=""
            app:titleTextColor="@color/black">
            <!-- ImageView để hiển thị icon với kích thước tùy chỉnh -->
            <ImageView
                android:id="@+id/account_icon"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="end"
                android:layout_marginRight="3dp"
                android:layout_marginBottom="30dp"
                android:padding="7dp"
                android:src="@drawable/ic_account_foreground" />


        </androidx.appcompat.widget.Toolbar>






    </FrameLayout>
    <TextView
        android:id="@+id/tvHelloPartner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello partner"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:paddingBottom="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"/>


    <!-- Grid Layout for Icons -->
    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="4"
        android:rowCount="2"
        android:layout_marginTop="25dp"
        android:layout_gravity="center"
        app:layout_constraintTop_toBottomOf="@id/tvHelloPartner"
        android:padding="8dp"
        android:orientation="horizontal">

        <!-- Menu Icon -->
        <LinearLayout
            android:id="@+id/menu_icon"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="8dp">

            <ImageView
                android:layout_width="48dp"
                android:layout_height="60dp"
                android:background="@drawable/image_view_background"
                android:src="@drawable/ic_menu_restaurant_foreground" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Menu"
                android:textSize="14sp"
                android:gravity="center"
                android:textColor="@color/black"
                android:maxLines="2"
                android:ellipsize="end" />
        </LinearLayout>

        <!-- Promotion Icon -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="8dp">

            <ImageView
                android:layout_width="48dp"
                android:layout_height="60dp"
                android:background="@drawable/image_view_background"
                android:src="@drawable/ic_menu_restaurant_foreground" />

            <TextView
                android:layout_width="75dp"
                android:layout_height="28dp"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="1"
                android:textColor="@color/black"
                android:text="Promotion"
                android:textSize="13sp" />
        </LinearLayout>

        <!-- Address Icon -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="8dp">

            <ImageView
                android:layout_width="48dp"
                android:layout_height="60dp"
                android:background="@drawable/image_view_background"
                android:src="@drawable/ic_menu_restaurant_foreground" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Address"
                android:textSize="14sp"
                android:gravity="center"
                android:textColor="@color/black"
                android:maxLines="2"
                android:ellipsize="end" />
        </LinearLayout>

        <!-- Report Icon -->
        <LinearLayout
            android:id="@+id/reportIcon"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="8dp">

            <ImageView
                android:layout_width="48dp"
                android:layout_height="60dp"
                android:background="@drawable/image_view_background"
                android:src="@drawable/ic_menu_restaurant_foreground" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Report"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:gravity="center"
                android:maxLines="2"
                android:ellipsize="end" />
        </LinearLayout>

        <!-- Hours of Operation Icon -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="8dp">

            <ImageView
                android:layout_width="48dp"
                android:layout_height="60dp"
                android:background="@drawable/image_view_background"
                android:src="@drawable/ic_menu_restaurant_foreground" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hours of operation"
                android:textSize="14sp"
                android:gravity="center"
                android:textColor="@color/black"
                android:maxLines="2"
                android:ellipsize="end" />
        </LinearLayout>

        <!-- Restaurant Manager Icon -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="8dp">

            <ImageView
                android:layout_width="48dp"
                android:layout_height="60dp"
                android:background="@drawable/image_view_background"
                android:src="@drawable/ic_menu_restaurant_foreground" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Restaurant manager"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:gravity="center"
                android:maxLines="2"
                android:ellipsize="end" />
        </LinearLayout>

        <!-- Restaurant Ratings Icon -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="8dp">

            <ImageView
                android:layout_width="48dp"
                android:layout_height="60dp"
                android:background="@drawable/image_view_background"
                android:src="@drawable/ic_menu_restaurant_foreground" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Restaurant ratings"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:gravity="center"
                android:maxLines="2"
                android:ellipsize="end" />
        </LinearLayout>

        <!-- Close/Open Branch Icon -->
        <LinearLayout
            android:id="@+id/time_icon"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="8dp">

            <ImageView
                android:layout_width="48dp"
                android:layout_height="60dp"
                android:background="@drawable/image_view_background"
                android:src="@drawable/ic_menu_restaurant_foreground" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Close/Open branch"
                android:textSize="14sp"
                android:gravity="center"
                android:textColor="@color/black"
                android:maxLines="2"
                android:ellipsize="end" />
        </LinearLayout>
    </GridLayout>
    <!-- ScrollView cho phần nội dung -->
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/gridLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/bottom_navigation_partner">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Promotional Cooperation Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="16dp"
                android:text="Promotional cooperation"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/darker_gray"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nhập 'PHV70': Giảm 70k trên giá món"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nhập 'PHV70': Giảm 70k trên giá món"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:text="Xem tất cả"
                    android:textSize="14sp"
                    android:textStyle="italic" />
            </LinearLayout>

            <!-- Order Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="16dp"
                android:text="Order"
                android:textSize="18sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@android:color/holo_orange_light">
                <!-- Nội dung phần đặt hàng -->
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <!-- Bottom Navigation -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation_partner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:elevation="8dp"
        app:itemIconTint="@color/black"
        app:itemTextColor="@color/black"
        app:labelVisibilityMode="labeled"
        app:menu="@menu/bottom_nav_menu_partner"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
